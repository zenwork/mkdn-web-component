{
    "presets": [
        [ "@babel/preset-env", {
            "targets": {
                "chrome": "60",
                "safari": "11",
                "ie": "11"
            },
            "modules": false
        } ]
    ],
    "plugins": [
        "@babel/plugin-transform-regenerator",
        [ "@babel/plugin-proposal-decorators", {
            "legacy": true
        } ],
        [ "@babel/plugin-proposal-class-properties", {
            "loose": true
        } ]
    ],
    "env": {
        "test": {
            "presets": [["@babel/preset-env"]]
        }
    }
}
